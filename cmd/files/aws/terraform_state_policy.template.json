{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "TerraformStatePolicy",
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "##AWS_ID##"
                ]
            },
            "Action": "s3:*",
            "Resource": "arn:aws:s3:::##BUCKET##/*"
        }
    ]
}